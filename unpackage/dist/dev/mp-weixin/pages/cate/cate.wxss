/* 水平间距 */
.scroll-box {
  display: flex;
  background-color: #FFFFFF;
}
.scroll-box .left-scroll-view {
  width: 120px;
}
.scroll-box .left-scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-box .left-scroll-view .left-scroll-view-item {
  background-color: #F7F7F7;
  line-height: 60px;
  text-align: center;
  font-size: 12px;
}
.scroll-box .left-scroll-view .left-scroll-view-item.active {
  background-color: #FFFFFF;
}
.scroll-box .right-scroll-view .right-scroll-view-item .item-title {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  padding: 15px 0;
}
.scroll-box .right-scroll-view .right-scroll-view-item .item-cate {
  display: flex;
  flex-wrap: wrap;
}
.scroll-box .right-scroll-view .right-scroll-view-item .item-cate .item-cate-box {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  font-size: 12px;
}
.scroll-box .right-scroll-view .right-scroll-view-item .item-cate .item-cate-box .img {
  width: 60px;
  height: 60px;
}

