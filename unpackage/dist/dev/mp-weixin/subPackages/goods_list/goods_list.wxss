/* 水平间距 */
.goods-list .goods-item {
  display: flex;
  padding: 10px 7px;
  border-bottom: 1px solid #f0f0f0;
}
.goods-list .goods-item .left-box {
  margin-right: 5px;
}
.goods-list .goods-item .left-box .left-img {
  width: 100px;
  height: 100px;
  display: block;
}
.goods-list .goods-item .right-box {
  display: flex;
  font-size: 13px;
  flex-direction: column;
  justify-content: space-between;
}
.goods-list .goods-item .right-box .goods-price {
  font-size: 16px;
  color: #c00000;
}

