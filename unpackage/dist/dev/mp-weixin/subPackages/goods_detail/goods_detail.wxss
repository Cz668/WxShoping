.detail-swiper {
  height: 700rpx;
}
.detail-swiper .swiper-item,
.detail-swiper image {
  width: 100%;
  height: 100%;
}
.goods-message {
  padding: 10px;
}
.goods-message .goods-price {
  color: #c00000;
  font-size: 18px;
  margin: 10px 0;
}
.goods-message .message-box {
  display: flex;
  justify-content: space-between;
}
.goods-message .message-box .left-box {
  font-size: 13px;
  padding-right: 10px;
}
.goods-message .message-box .right-box {
  width: 120px;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #efefef;
  color: gray;
}
.goods-message .expressage {
  margin: 10px 0;
  font-size: 12px;
  color: gray;
}
.goods_nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

